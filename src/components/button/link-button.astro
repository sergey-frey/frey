---
import type { HTMLAttributes } from "astro/types";
import "./button.scss";

export interface Props extends HTMLAttributes<"a"> {}

const { class: className, ...props } = Astro.props;

const hasIcon = Astro.slots.has("right-icon") || Astro.slots.has("left-icon");
---

<a
  data-cursor='button-cursor'
  {...props}
  class:list={["button", "interactive", { withIcon: hasIcon }, className]}
>
  <slot name='left-icon' />
  <slot />
  <slot name='right-icon' />
</a>
